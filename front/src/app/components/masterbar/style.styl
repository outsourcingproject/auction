header {
  $color-main = #6c000a;
  width: 100%;
  nav {
    background: $color-main;
    color: white;
    ul {
      margin: 0;
      padding: 0;
      &.pull-left li:nth-child(1) a:before {
        font-family: 'fontello';
        color: #fff195;
        content: '\e800';
        margin-right: .2em;
      }
      &.pull-right li:hover { background: #d14600; }
      li {
        display: inline-block;
        list-style-type: none;
        padding: .6rem;
        font-size: .6rem;
        transition: background 100ms ease-in-out;
        a {
          height: 100%;
          color: white;
          text-decoration: none;
          cursor: pointer;
        }
      }
    }
    .menu{
      cursor:pointer;
    }
  }
  .title {
    margin: 1rem auto;
    .logo{
      cursor:pointer;
    }
    & > .pull-right { margin-right: .6rem; }
    .search-bar-container {
      overflow: hidden;
      .search-bar {
        box-sizing: border-box;
        position: relative;
        width: 15rem;
        height: 1.9rem;
        border: .1rem solid $color-main;
        input { height: 100%; width: 12rem; }
        label {
          position: absolute;
          height: 100%; width: 3rem;
          background: $color-main;
          text-align: center;
          cursor: pointer;
          .search-icon:before {
            font-family: 'fontello';
            color: white;
            content: '\e801';
            line-height: 1.5rem;
          }
        }
      }
    }
    ul.main-menu {
      margin: 1rem 0 0;
      li {

        display: inline-block;
        list-style-type: none;
        margin-left: 1.5rem;
        a {
          color: black;
          text-decoration: none;
          padding: .1rem .2rem;
          border-radius: 1px;
          transition: all 100ms ease-in-out;
          font-size: .8rem;
          &:hover, &.router-link-active {
            background: $color-main;
            color: white;
          }
        }
      }
    }
  }
}
