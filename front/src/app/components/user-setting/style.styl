box-shadow() {
  box-shadow: 0px 2px 5px 0 rgba(0, 0, 0, 0.26);
  padding: 15px;
  margin 10px
}

.flex-row {
  display flex
  justify-content space-between
  align-items stretch
}

.flex-box {
  display flex
}

.user-setting {
  .password-change {
    max-width 50%
    box-shadow()
    min-height 12rem

    .form {
      margin 15px 0px
      overflow hidden
    }
  }
  .user-info {
    max-width 50%
    box-shadow()
  }
  .address-management {
    a {
      cursor: pointer;
    }
    .header {
      a {
        float right
        font-size 0.7rem;
      }
    }
    box-shadow()
    min-height 10rem
    .table {
      text-align center
      th {
        text-align center
      }
      .edit-selected {
        width 2.5rem;
      }
      .default {
        width 5rem;
      }
    }
  }
}

.password-change, .user-info, .address-management {
  flex-grow 1;
  .content{
    margin-top 1rem
  }
}

.header {
  font-size 0.9rem
  margin 5px 0;
  i {
    color: #745c30
  }
}

.submit-button-wrapper {
  text-align right
  margin-bottom: 10px;
}

alert {
  display block
}
